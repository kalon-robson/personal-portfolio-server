{
  "name": "personal-portfolio-server",
  "version": "0.0.0",
  "description": "personal-portfolio-server",
  "repository": "git@github.com:kalon-robson/personal-portfolio-server.git",
  "author": "Kalon Robson",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts nodemon --exec ts-node src/index.ts",
    "cleanDev": "rm -rf ./storage && cross-env PAYLOAD_DROP_DATABASE=true PAYLOAD_SEED_DATABASE=true pnpm dev",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload build",
    "build:server": "tsc",
    "build": "pnpm build:payload && pnpm build:server",
    "serve": "cross-env PAYLOAD_CONFIG_PATH=dist/payload.config.js node dist/index.js",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "generate:graphql": "cross-env PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:graphQLSchema",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint-staged": "lint-staged --verbose",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.24.0",
    "@innovixx/payload-icon-picker-field": "^0.0.4",
    "@payloadcms/bundler-webpack": "^1.0.7",
    "@payloadcms/db-mongodb": "^1.7.1",
    "@payloadcms/plugin-cloud-storage": "^1.1.3",
    "@payloadcms/plugin-seo": "^2.3.2",
    "@payloadcms/richtext-lexical": "^0.11.2",
    "body-parser": "^1.20.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "payload": "^2.25.0"
  },
  "devDependencies": {
    "@innovixx/eslint-config": "^1.3.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-sort-export-all": "^1.4.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint",
      "bash -c tsc"
    ]
  }
}